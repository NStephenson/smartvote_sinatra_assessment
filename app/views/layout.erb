<html>
<head>
  <title></title>
</head>
<body>
  <ul>
    <% if logged_in? %>
      <li>Hello <a href="/voters/<%= current_user.id%>"><%= current_user.username %></a>!
      <li><a href="/candidates">Candidates</a>
      <li><a href="/voters">Voters</a>
      <li><a href="/issues">Issues</a>
      <li><a href="/reactions">Reactions</a>
      <li><a href="/logout">Log out</a>
    <% else %>
      <li><a href="/login">Login</a>
      <li><a href="/signup">Sign up</a>
    <% end %>

  </ul>
  <div>
    <% if flash.has?(:message) %>
      <p> <%= flash[:message] %></p>
    <% end %>
  </div>
  <%= yield %>
</body>
</html>